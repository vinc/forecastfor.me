<% content_for(:title, "Forecast for #{bulletin.location.city}, #{bulletin.location.country}") %>

<article>
  <header>
    <h1><%= bulletin.location.city %></h1>
    <% if bulletin.date == Date.today %>
      <h2><%= t('date.today').capitalize %></h2>
    <% else %>
      <h2><%= l(bulletin.date, format: '%A').capitalize %></h2>
    <% end %>
  </header>

  <p class="lead">
    <span class="night"><%= bulletin.night %></span>
    <span class="morning"><%= bulletin.morning %></span>
    <span class="afternoon"><%= bulletin.afternoon %></span>
    <span class="evening"><%= bulletin.evening %></span>
  </p>
</article>
