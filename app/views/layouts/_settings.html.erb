<div class="modal fade" id="settings" tabindex="-1" role="dialog" aria-labelledby="settings-label" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="settings-label">Settings</h4>
      </div>
      <form role="form" action="" method="get">
        <div class="modal-body">
          <input type="hidden" name="latitude" value="<%= latitude rescue '' %>">
          <input type="hidden" name="longitude" value="<%= longitude rescue '' %>">
          <div class="form-group">
            <label for="settings-city">City</label>
            <input id="settings-city" type="text" class="form-control" name="city" value="">
          </div>
          <div class="form-group">
            <label for="settings-locale">Language</label>
            <select id="settings-locale" name="locale" class="form-control">
              <option<%= locale == :en ? ' selected' : '' %> value="en">English</option>
              <option<%= locale == :fr ? ' selected' : '' %> value="fr">French</option>
            </select>
          </div>
          <div class="form-group">
            <label for="settings-units">Units</label>
            <select disabled id="settings-units" name="units" class="form-control">
              <option selected value="metric">Metric</option>
              <option value="imperial">Imperial</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
